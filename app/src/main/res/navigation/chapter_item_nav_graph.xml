<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chapter_navigation_graph"
    app:startDestination="@id/chapterFragment">

    <fragment
        android:id="@+id/chapterFragment"
        android:name="com.app.bookassistant.ui.chapters.ChapterFragment"
        android:label="fragment_chapter"
        tools:layout="@layout/fragment_chapter">
        <action
            android:id="@+id/action_chapterFragment_to_questionFragment"
            app:destination="@id/questionFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left" />
    </fragment>
    <fragment
        android:id="@+id/questionFragment"
        android:name="com.app.bookassistant.ui.questions.QuestionFragment"
        android:label="fragment_question"
        tools:layout="@layout/fragment_question"/>
</navigation>